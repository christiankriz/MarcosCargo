<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/parcel_item_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"

        android:foreground="?android:attr/selectableItemBackground"
        >

        <RelativeLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/parcel_logo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:paddingTop="5dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_parcel_24dp"
                android:tint="@color/darker_blue"/>

            <TextView
                android:id="@+id/parcel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/parcel_logo"
                android:layout_marginLeft="20dp"
                android:ems="10"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/parcel_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parcel_name"
                android:textSize="10sp"
                android:layout_toRightOf="@+id/parcel_logo"
                android:layout_marginLeft="20dp"
                android:textColor="@color/fontGray"/>


            <ImageView
                android:id="@+id/date_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@+id/parcel_logo"
                android:layout_below="@+id/parcel_status"
                android:src="@drawable/ic_schedule_24dp"
                android:tint="@color/fontGray"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
              />

            <TextView
                android:id="@+id/date_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/date_image"
                android:layout_below="@+id/parcel_status"
                android:tint="@color/fontGray"
                android:layout_marginLeft="8dp"
                android:textColor="@color/fontGray"
                android:layout_marginTop="10dp"
                android:textSize="8sp"
                android:text="Today"
                />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
